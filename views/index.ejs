<body>
  <header>
    <nav class="nav-index2">
      <ul>
        <li id="mainLOCFIT"><a href="/">LOCFIT</a></li>
        <li class="li-nav"><a href="/help">Aides</a></li>
        <li class="li-nav"><a href="/catalogue">Catalogue</a></li>
        <li class="li-nav"><a href="/contact">Contact</a></li>
        <% if(role === 'admin') {%>
          <li class="li-nav"><a href="/inscriptionadmin">Admin</a></li>
        <% } %>
        <% if(role === 'agent') {%>
          <li class="li-nav"><a href="/addProduct">Gestion</a></li>
        <% } %>
        
