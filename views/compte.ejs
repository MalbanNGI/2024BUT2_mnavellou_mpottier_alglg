<%- include('header'); -%>

    <div class="space"></div>
    <div class="banner">
        <h2>Compte</h2>
    </div>

    <nav class="ariane">
        <a href="/">Accueil</a>
        <span>&gt;</span>
        <a class="gras" href="/compte">Compte</a>
    </nav>
    <div class="compte-data">
        <div class="compte-title">
            <h1>Bonjour <%= userInfos.nom %>,</h1>
        </div>
        <div class="compte-infos">
            <h3>Informations de l'utilisateur</h3>
            <div class="nom">
                <p>
                    <%= userInfos.nom %>
                        <%= userInfos.prenom %> né(e) le <%= userInfos.ddn %>
                </p>
            </div>
            <div class="login">
                <p>
                    Login : <%= userInfos.email %>
                </p>
            </div>

            <div class="type-user">
                <p>
                    Role : <%= userInfos.type_utilisateur %>
                </p>
            </div>
        </div>
    </div>
    <div class="middleOfPage">
        <div class="wrapper2">
            <div class="profile-top">
                <div class="profile-image">
                </div>
            </div>

            <div class="profile-bottom">
                <div class="profile-infos">
                    <div class="main-infos">
                        <h3 class="name">
                            <%= userInfos.prenom %>
                                <%= userInfos.nom %>
                        </h3>
                        <% const an=userInfos.ddn.getFullYear() %>
                            <% const nbyears=2024- an %>
                                <p class="age grey">
                                    <%= nbyears %> ans
                                </p>
                    </div>
                    <p class="email">
                        <%= userInfos.email %>
                    </p>
                    <p class="ville"><ion-icon name="accessibility-outline"></ion-icon>LocFit <%=
                            userInfos.type_utilisateur %>
                    </p>
                </div>

                <div class="profile-stats">
                    <div class="stat-item">
                        <p class="stat">Né(e) le <%= userInfos.ddn.getDay() %>
                                <% let month=userInfos.ddn.getMonth(); monthOfYears=["Janvier", "Février" , "Mars"
                                    , "Avril" , "Mai" , "Juin" , "Juillet" , "Août" , "Septembre" , "Octobre"
                                    , "Novembre" , "Décembre" ]; %>
                                    <%= monthOfYears[month] %>
                        </p>
                        <p class="grey">
                            <%= userInfos.ddn.getFullYear() %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <%- include('footer'); -%>